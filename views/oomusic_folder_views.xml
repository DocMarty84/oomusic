<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="oomusic_folder_view_form" model="ir.ui.view">
        <field name="name">oomusic.folder.form</field>
        <field name="model">oomusic.folder</field>
        <field name="arch" type="xml">
            <form string="Folder">
                <header>
                    <button name="action_scan_folder" string="Scan" type="object"/>
                    <button name="action_build_image_cache" string="Build Image Cache"
                        type="object" groups="base.group_no_one"/>
                </header>
                <sheet>
                    <field name="user_id" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="path"/>
                        <field name="exclude_autoscan"/>
                    </group>
                    <group>
                        <field name="last_scan" readonly="1"/>
                        <field name="last_scan_duration" readonly="1" groups="base.group_no_one"/>
                        <field name="locked" groups="base.group_no_one"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="oomusic_folder_view_tree" model="ir.ui.view">
        <field name="name">oomusic.folder.tree</field>
        <field name="model">oomusic.folder</field>
        <field name="arch" type="xml">
            <tree string="Folders" decoration-danger="locked == True">
                <field name="locked" invisible="1"/>
                <field name="name"/>
                <field name="path"/>
                <field name="last_scan"/>
            </tree>
        </field>
    </record>

    <record id="action_folder" model="ir.actions.act_window">
        <field name="name">Folders</field>
        <field name="res_model">oomusic.folder</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('root', '=', True)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Set-up the oomusic directories to scan.
            </p><p>
                Your oomusic wil be automatically organized by album and artist in the corresponding
                menu. Scanning a directory is usually quite fast, taking around 30 seconds to scan
                1,000 files.
            </p>
        </field>
    </record>

    <record id="oomusic_folder_view_form2" model="ir.ui.view">
        <field name="name">oomusic.folder.form2</field>
        <field name="model">oomusic.folder</field>
        <field name="arch" type="xml">
            <form string="Folder">
                <header>
                    <button name="action_add_to_playlist" string="Add To Current Playlist" class="btn-primary"
                        type="object" attrs="{'invisible': [('in_playlist', '=', True)]}"/>
                </header>
                <sheet>
                    <field name="in_playlist" invisible="1"/>
                    <field name="image_medium" widget="image" class="oe_avatar" readonly="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="path_name"/>
                        </h1>
                    </div>
                    <field name="track_ids" readonly="1">
                        <tree string="Tracks">
                            <field name="in_playlist" invisible="1"/>
                            <button name="action_add_to_playlist" string="Add To Current Playlist"
                                icon="fa-plus" widget="oomusic_add" type="object"
                                attrs="{'invisible': [('in_playlist','=', True)]}"/>
                            <field name="track_number"/>
                            <field name="name"/>
                            <field name="duration_min" widget="float_time"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="oomusic_folder_view_tree2" model="ir.ui.view">
        <field name="name">oomusic.folder.tree2</field>
        <field name="model">oomusic.folder</field>
        <field name="field_parent">child_ids</field>
        <field name="arch" type="xml">
            <tree string="Folders">
                <field name="path_name"/>
                <field name="track_ids"/>
            </tree>
        </field>
    </record>

    <record id="action_folder_browse" model="ir.actions.act_window">
        <field name="name">Browse Files</field>
        <field name="res_model">oomusic.folder</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">tree</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('root', '=', True)]</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('oomusic_folder_view_tree2')})]"
        />
    </record>

    <record id="action_folder_show2" model="ir.actions.act_window">
        <field name="name">Folder</field>
        <field name="res_model">oomusic.folder</field>
        <field name="type">ir.actions.act_window</field>
        <field name="domain">[('id', '=', active_id)]</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('oomusic_folder_view_tree2')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('oomusic_folder_view_form2')})]"
        />
    </record>

    <record id="ir_open_folder" model="ir.values">
        <field eval="'tree_but_open'" name="key2"/>
        <field eval="'oomusic.folder'" name="model"/>
        <field name="name">Folder</field>
        <field eval="'ir.actions.act_window,%d'%action_folder_show2" name="value"/>
    </record>

    <!-- Third Level Menu -->
    <menuitem id="menu_action_folder" parent="menu_oomusic_config" action="action_folder" sequence="10"/>
    <menuitem id="menu_action_folder_browse" parent="menu_oomusic_library" action="action_folder_browse" sequence="40"/>
</odoo>
